<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#ffff"
        android:layout_marginTop="10dp"
        android:outlineAmbientShadowColor="#000"
        app:cardCornerRadius="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00CD00"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:text="Phiếu mượn"
                    android:textSize="30dp"
                    />

                <ImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/ivSuaPhieuMuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"/>
                <ImageView
                    android:layout_marginTop="15dp"
                    android:id="@+id/ivXoaPhieuMuon"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_delete"/>

            </LinearLayout>
            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:id="@+id/tvMaPhieuMuon"/>
            <TextView
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:id="@+id/tvMaThanhVien_PM"/>
            <TextView
                android:layout_marginTop="15dp"

                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaSach_PM"/>
            <TextView
                android:layout_marginTop="15dp"

                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMaThuThu_PM"/>
            <TextView
                android:layout_marginTop="15dp"

                android:gravity="center"
                android:textColor="#000"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvNgayMuon"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="25dp"
                android:id="@+id/tvTienThue"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>