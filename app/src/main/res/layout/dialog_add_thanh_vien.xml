<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="15dp">
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/nen11"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="THÊM THÀNH VIÊN"
        android:textColor="@color/white"
        android:gravity="center"/>
    <EditText
        android:textColor="@color/white"

        android:layout_margin="10dp"
        android:hint="Nhập mã thành viên"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edAddMaThanhVien"/>
    <EditText
        android:layout_margin="10dp"
        android:textColor="@color/white"

        android:hint="Nhập tên thành viên"
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edAddTenThanhVien"/>
    <EditText
        android:layout_margin="10dp"
        android:textColor="@color/white"

        android:hint="Nhập năm sinh "
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edAddNamSinhThanhVien"/>
    <EditText
        android:layout_margin="10dp"
        android:textColor="@color/white"

        android:hint="Nhập so tai khoan "
        android:textColorHint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/edAddSoTaiKhoan"/>
    <LinearLayout
        android:layout_margin="10dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Them"
            android:background="@drawable/back"
            android:id="@+id/btnAddThanhVien"/>
        <Button
            android:layout_marginLeft="10dp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Huy"
            android:background="@drawable/back"

            android:id="@+id/btnHuyAddThanhVien"/>
    </LinearLayout>



</LinearLayout>
</androidx.cardview.widget.CardView>